@page
@model TintinsChatroom.UI.Pages.User.SpecificRoomModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <div class="justify-content-center align-content-center">
                <h1 class="mb-3 text-light font-italic">@Model.ChatRoom.ChatRoomName</h1>
                <hr />
            </div>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-4">
            <div class="justify-content-center align-content-center">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger">
                    </div>
                    <div class="mb-3">
                        <input type="hidden" asp-for="@Model.ChatRoom.Id" />
                        <input type="hidden" asp-for="@Model.ChatRoom.ChatRoomName" />
                        <input type="hidden" asp-for="@Model.ChatRoom.Owner" />
                        <input type="hidden" asp-for="@Model.ChatRoom.ChatMessages" />
                        <label class="form-label text-light" asp-for="@Model.NewMessage">Message</label>
                        <textarea asp-for="@Model.NewMessage" class="textArea form-control bg-transparent text-light" style="height:100px; width:250px;"></textarea>
                        <span asp-validation-for="@Model.NewMessage" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-outline-light">Comment</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @if (Model.ChatRoom.ChatMessages.Count != 0)
    {
        <div id="content">
            <div id="bottom">
                <div class="row justify-content-center align-items-center">
                    @foreach (var message in Model.ChatRoom.ChatMessages.Reverse<TintinsChatroom.DTO.Models.ChatMessageModel>())
                    {
                        <div class="col-sm-12 col-md-12 col-lg-4">
                            <hr />
                            <div class="card p-3 mb-2">
                                <div class="d-flex justify-content-between">
                                    <div class="d-flex flex-row align-items-center">
                                        <img class="icon" src="~/images/@message.User.Image">
                                        <div class="ms-2 c-details">
                                            <h6 class="ml-5 mt-0" style="font-size:20px; font-weight:400; color:darkcyan;">@message.User.UserName</h6>
                                        </div>
                                    </div>
                                </div>
                                <p class="mt-3 ml-1" style="color:bisque; font-size: 15px;">@message.Message</p>
                                <p class="text-light font-weight-lighter mt-1 ml-0 mb-0" style="font-size:12px;">@message.Date.Hour:@message.Date.Minute</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <h2 class="font-italic" style="font-size: 16px; color:bisque;">No Messages...</h2>
    }
</div>
